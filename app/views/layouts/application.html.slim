doctype html
html[lang="en"]
  head
    meta[charset="utf-8"]
    meta[http-equiv="X-UA-Compatible" content="IE=edge"]
    meta[name="viewport" content="width=device-width, initial-scale=1"]
    title DockerRails
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  body
    = initjs_tag 'DockerRails'

    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed[type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"]
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

          a.navbar-brand[href=root_path]
            | DockerRails

        #navbar.collapse.navbar-collapse
          p.navbar-text.hidden-xs
            | Just a demo
            '
            a.navbar-link[href='https://github.com/ledermann/docker-rails']
              = icon('github')

          ul.nav.navbar-nav.navbar-right
            li
              = link_to 'Sidekiq', sidekiq_web_path, data: { turbolinks: 'false' }
            li
              = link_to(url_for(params.to_unsafe_h.merge format: :pdf), title: 'Export to PDF') do
                i.fa.fa-print
            li
              = form_tag(pages_path, method: "get", class: 'navbar-form navbar-left') do
                .form-group
                  = text_field_tag :q, params[:q], placeholder: "Search", class: 'form-control'

    .container
      - if notice
        p.alert.alert-info
          = notice
      = yield

    footer.footer
      .container
        = render 'layouts/system_info'
